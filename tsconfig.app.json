{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "./tsconfig.base.json"
  ],
  "include": [
    "**/*.ts",
    "src/**/*.d.ts",
    "src/type/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
